<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_screen"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".Add_Players">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:shadowColor="#C8D2F6"
        android:shadowDx="10"
        android:shadowRadius="5"
        android:text="@string/tic_tac_toe"
        android:textColor="#0A6385"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginLeft="50dp"
        android:gravity="bottom"
        android:text="Enter the names:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="#E6979797"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/x"
            tools:ignore="ImageContrastCheck"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/playerOneName"
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="10dp"
            android:hint="Player 1"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="#E6979797"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/o" />

        <EditText
            android:id="@+id/playerTwoName"
            android:inputType="text"
            android:maxLines="1"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="10dp"
            android:hint="Player 2"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startGameButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_orange_button"
        android:text="Start"
        android:textColor="#1B5E20" />

</LinearLayout>